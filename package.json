{
  "name": "ochre-sdk",
  "version": "0.1.0",
  "description": "SDK for OCHRE",
  "keywords": [
    "ochre",
    "uchicago",
    "digital-culture",
    "digital-humanities"
  ],
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "homepage": "https://github.com/UChicago-Forum-for-Digital-Culture/ochre-sdk",
  "bugs": {
    "url": "https://github.com/UChicago-Forum-for-Digital-Culture/ochre-sdk/issues"
  },
  "author": "Firat Ciftci <firatciftci@uchicago.edu> (https://digitalculture.uchicago.edu)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UChicago-Forum-for-Digital-Culture/ochre-sdk.git"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "type": "module",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.1",
    "@changesets/cli": "^2.27.11",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "scripts": {
    "build": "tsup",
    "ci": "pnpm run build && pnpm run check-format && pnpm run check-exports && pnpm run lint && pnpm run test",
    "lint": "tsc",
    "test": "vitest run",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack .",
    "local-release": "pnpm install --frozen-lockfile && changeset version && changeset publish"
  },
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "iso-639-3": "^3.0.1"
  }
}
